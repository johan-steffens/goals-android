<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:layout_centerInParent="true"
        android:background="@color/transparent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/inset_double"
                android:paddingBottom="@dimen/inset_double"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Confirm"
                    android:textStyle="italic"
                    android:textSize="@dimen/text_xlarge"
                    android:gravity="end"
                    android:layout_marginLeft="@dimen/inset_double"
                    android:layout_marginRight="@dimen/inset_double"/>

                <TextView
                    android:id="@+id/txtMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Are you sure you want to do this thing?"
                    android:textStyle="italic"
                    android:textSize="@dimen/text_normal"                    android:layout_marginTop="@dimen/inset_single"
                    android:layout_marginLeft="@dimen/inset_double"
                    android:layout_marginRight="@dimen/inset_double"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnYes"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_default_height"
                        android:minWidth="100dp"
                        android:background="@drawable/btn_secondary_selector"
                        android:foreground="?attr/selectableItemBackground"
                        android:text="Yes"
                        android:textColor="#FFF"
                        android:textSize="@dimen/text_small"
                        android:paddingLeft="@dimen/inset_double"
                        android:paddingRight="@dimen/inset_double"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:layout_marginTop="@dimen/inset_double"
                        android:layout_marginLeft="@dimen/inset_double"
                        android:layout_marginRight="@dimen/inset_double" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnNo"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_default_height"
                        android:minWidth="100dp"
                        android:background="@drawable/btn_secondary_selector"
                        android:foreground="?attr/selectableItemBackground"
                        android:text="No"
                        android:textColor="#FFF"
                        android:textSize="@dimen/text_small"
                        android:paddingLeft="@dimen/inset_double"
                        android:paddingRight="@dimen/inset_double"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:layout_marginTop="@dimen/inset_double"
                        android:layout_marginRight="@dimen/inset_double"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>